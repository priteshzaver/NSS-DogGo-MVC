@model DogGo.Models.Walks

@{
    ViewData["Title"] = "CompleteWalk";
}

<h1>CompleteWalk</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CompleteWalk">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" />
            </div>
            <div>
                <label class="control-label">Owner:</label>
                <span>@Model.Dog.Owner.Name</span>
            </div>
            <div>
                <label class="control-label">Dog:</label>
                <span>@Model.Dog.Name</span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <span asp-validation-for="Date" class="text-danger">@Model.Date</span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>            
            <div class="float-left">
                <button asp-action="ManageWalks" class="btn btn-primary">Back to Walks</button>
            </div>
            <div class="form-group float-right">
                <button asp-action="CompleteWalk" class="btn btn-primary" value="Complete">Complete</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
